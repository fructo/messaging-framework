{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strict": true,
        "target": "esnext",
        "module": "es2015",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@fructo/messaging-framework": [
                "scripts"
            ]
        },
    },
    "include": [
        "scripts/**/*",
        "tests/**/*",
        "examples/**/*"
    ]
}
